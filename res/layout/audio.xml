<?xml version="1.0" encoding="utf-8"?>
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3" >

        <ToggleButton
            android:id="@+id/recordtoggle"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:text="@string/audio_enable_text"
            android:textOff="Enable Audio Recording"
            android:textOn="Disable Audio Recording" />

        <TextView
            android:id="@+id/textView1"
            android:layout_column="1"
            android:layout_row="2"
            android:text="@string/audiosegmenttime"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/audiospinner"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="3"
            android:text="@string/uploadtime"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/uploadspinner"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3" />

        <Space
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0" />

        <Space
            android:layout_width="1dp"
            android:layout_height="74dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1" />

        <Space
            android:layout_width="21dp"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_row="0" />

    </GridLayout>
